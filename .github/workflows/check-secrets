name: Check Secrets

on:
  workflow_call:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:

      - name: Set up secrets for building
        env:
          RENDEZVOUS_SERVER: ${{ secrets.RENDEZVOUS_SERVER }}
          RS_PUB_KEY: ${{ secrets.RS_PUB_KEY }}
        run: |
          echo "Setting up RustDesk server details..."
          echo "Rendezvous Server: $RENDEZVOUS_SERVER"
          echo "Public Key: $RS_PUB_KEY"
      
